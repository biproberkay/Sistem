@model YerVM
@{
    ViewData["Title"] = "DetatilsYer";
    Layout = "~/Areas/Member/Views/Shared/_Layout.cshtml";
}

<h1>DetatilsYer</h1>

<div>
    <h4>Yer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Parent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Parent.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YerChilds)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YerChilds.Count)
            @foreach (var item in Model.YerChilds)
            {
                <small>@item.Title</small>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Posts)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Posts.Count)
            @foreach (var item in Model.Posts)
            {
                <small>@item.Title<br />@item.Summary </small>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
